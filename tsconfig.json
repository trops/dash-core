{
    "compilerOptions": {
        "target": "ES2018",
        "module": "ESNext",
        "moduleResolution": "node",
        "jsx": "react-jsx",
        "strict": false,
        "esModuleInterop": true,
        "allowJs": true,
        "skipLibCheck": true,
        "declaration": false,
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": ".",
        "paths": {
            "@trops/dash-react": ["./node_modules/@trops/dash-react"]
        }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist", "electron"]
}
